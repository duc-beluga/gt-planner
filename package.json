{
  "scripts": {
    "postinstall": "concurrently pnpm:postinstall:*",
    "postinstall:server": "cd server && pnpm install",
    "postinstall:client": "cd client && pnpm install",
    "start": "concurrently pnpm:start:*",
    "start:client": "cd client && pnpm dev",
    "start:server": "cd server && pnpm start"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
